<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comercios cercanos"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:id="@+id/titulo1"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView"
                android:layout_below="@+id/titulo1"
                android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promociones destacadas"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:layout_below="@id/recyclerView"
                android:id="@+id/titulo2"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerPromo"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/titulo2"/>
            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_below="@+id/viewPagerPromo"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/caracteristicasPromo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/SliderDots"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                //DESCRIPCION
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Restaurant"/>
                    <android.support.v7.widget.AppCompatImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/restaurant" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Descripcion"/>
                    <android.support.v7.widget.AppCompatImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/info" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Telefono"/>
                    <android.support.v7.widget.AppCompatImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/phone" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Ubicacion"/>
                    <android.support.v7.widget.AppCompatImageButton
                        android:background="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/location" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvUbicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>